{
  "manifest_version": 3,
  "name": "Tab Monitor",
  "description": "Comprehensive tab management and monitoring with enhanced data tracking.",
  "version": "1.1",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "idle",
    "windows",
    "tabGroups",
    "bookmarks"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "icons/icon_16x16.png",
      "48": "icons/icon_48x48.png",
      "128": "icons/icon_128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
