{
  "manifest_version": 3,
  "name": "Tab Monitor - Clean Up Idle Chrome Tabs",
  "description": "ðŸ§  Declutter Chrome! Track idle tabs, jump back in, or close the forgotten ones. Stay focused and fast.",
  "version": "0.1",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "idle",
    "windows",
    "tabGroups"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "icons/icon_16x16.png",
      "48": "icons/icon_48x48.png",
      "128": "icons/icon_128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
